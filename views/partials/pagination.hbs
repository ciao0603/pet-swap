<nav class="d-flex justify-content-center">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link {{#ifEqual pagination.currentPage 1}} disabled {{/ifEqual}}"
        href="/products?page={{pagination.prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pagination.pages}}
    {{#ifEqual this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item"><a class="page-link" href="/products?page={{this}}">{{this}}</a></li>
    {{/ifEqual}}
    {{/each}}
    <li class="page-item">
      <a class="page-link{{#ifEqual pagination.currentPage pagination.totalPage}} disabled {{/ifEqual}}"
        href="/products?page={{pagination.next}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>