<div class="mb-4 text-center">
  <h1 class="fs-3 font-weight-normal fw-bold">Create Account</h1>
</div>
<form class="form-register" action="/register" method="POST" style="width: 100%;">
  <div class="form-row mb-3">
    <input type="text" id="name" name="name" class="form-control" placeholder="Name" required>
  </div>
  <div class="form-row mb-3">
    <input type="text" id="email" name="email" class="form-control" placeholder="Email" required>
  </div>
  <div class="form-row mb-3">
    <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
  </div>
  <div class="form-row mb-3">
    <input type="password" id="passwordCheck" name="passwordCheck" class="form-control" placeholder="Password Check"
      required>
  </div>
  <div class="text-center">
    <button class="btn btn-primary btn-block" type="submit">Register</button>
  </div>
</form>