<div class="p-2">
  <h2 class="fw-bold fs-4 my-2">已售出商品</h2>
  {{!-- 商品列表 --}}
  <table class="table align-middle table-striped">
    <thead class="table-primary">
      <tr class="text-center">
        <th scope="col">編號</th>
        <th scope="col">商品名稱</th>
        <th scope="col">價錢</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr class="text-center">
        <th scope="row">{{this.id}}</th>
        <td class="d-flex justify-content-center">
          <div style="max-width: 45px;">
            <img src="{{this.image}}" class="img-fluid rounded-circle" style="width:100%; aspect-ratio: 1/1;"
              alt="商店頭像">
          </div>
          <p class="mx-2 my-auto">{{this.name}}</p>
        </td>
        <td>$ {{this.price}}</td>
        <td>
          <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#product-{{this.id}}">
            詳情
          </button>
          {{!-- 訂單詳情 --}}
          <div class="modal fade" id="product-{{this.id}}" tabindex="-1" aria-labelledby="orderItemsLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fw-bold fs-3" id="orderItemsLabel">{{this.name}}</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  {{!-- 寄送資訊 --}}
                  <h5 class="text-start fw-medium fs-6">寄送資訊</h5>
                  <div class="rounded text-start bg-dark-subtle mb-3 p-2">
                    <p class="mb-1">收件人姓名: <strong>{{this.receiverName}}</strong></p>
                    <p class="mb-1">收件人電話: <strong>{{this.receiverPhone}}</strong></p>
                    <p class="mb-1">收件人地址: <strong>{{this.receiverAddress}}</strong>
                    </p>
                  </div>
                  {{!-- 商品資訊 --}}
                  <h5 class="text-start fw-medium fs-6">商品資訊</h5>
                  <hr class="my-2">
                  <div class="d-flex">
                    <div style="max-width: 40%;">
                      <img src="{{this.image}}" class="img-fluid" style="width:100%; aspect-ratio: 1/1;" alt="商店頭像">
                    </div>
                    <div class="text-start mx-2 align-self-end">
                      <p class="text-wrap">{{this.description}}</p>
                      <div class="d-flex fw-bold">
                        <p class="me-2 mb-0">{{this.status}}</p>
                        <p class="mb-0">$ {{this.price}}</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>